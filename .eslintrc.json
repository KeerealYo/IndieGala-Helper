{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "$": false,
        "chrome": false,
        "browser": false,
        "settings": true,
        "local_settings": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-extra-boolean-cast": "off",
        "camelcase": "off",
        "prefer-template": "warn"
    }
}
